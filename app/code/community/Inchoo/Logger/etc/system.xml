<config>
    <sections>
        <dev>
            <groups>
                <inchoo_logger translate="label" module="inchoo_logger">
                    <label>Logger</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <log_request_params translate="label">
                            <label>Log Request Params</label>
                            <comment><![CDATA[If set to Yes, request parameters will be logged into database. Prior to saving they will be serialised and passed through Magento encryption function. Usage of this feature is highly discouraged in production sites, especially since it can log sensitive customer data such as the credit card numbers and paswords.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </log_request_params>
                    </fields>
                </inchoo_logger>
            </groups>
        </dev>
    </sections>
</config>