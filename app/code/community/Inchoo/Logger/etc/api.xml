<config>
    <api>
        <resources>
            <inchoo_logger translate="title" module="inchoo_logger">
                <title>Logger Resource</title>
                <model>inchoo_logger/api</model>
                <methods>
                    <list translate="title" module="inchoo_logger">
                        <title>Retrive logs</title>
                        <method>logs</method>
                        <acl>inchoo_logger/list</acl>
                    </list>
                </methods>


                <faults module="inchoo_logger">
                    <data_invalid>
                        <code>100</code >
                        <message>Invalid logs data.</message>
                    </data_invalid>
                </faults>



            </inchoo_logger>
        </resources>
        <acl>
            <resources>
                <inchoo_logger translate="title" module="inchoo_logger">
                    <title>Logger</title>
                    <list translate="title" module="inchoo_logger">
                        <title>Retrive logs</title>
                    </list>
                </inchoo_logger>
            </resources>
        </acl>
    </api>
</config>